{% extends 'base.html.twig' %}
{% block title %}
	{{ parent() }}
	- Kombat
{% endblock %}
{% block stylesheet %}
	<link rel="stylesheet" href="/assets/styles/gameHome.scss">
{% endblock %}
{% block content %}
	<div class="body-background" style="background-image: url({{ maps.img_src }}); width:auto; height:100%">
		<header class="octogon">
			<h1>Kombat</h1>
		</header>
		<section class="result">
			<div class="container">
				<div class="row">
					<div class="col">
						<img src="{{ asset(robotWin.img) }}" class="rounded float-start" alt="Image de l'attaque Win" style="width:100%; height:100%">
						<div class="">
							<strong>{{ robotWin.name }}</strong>
						</div>
					</div>
					<div class="col">
						<div class="card-vs">
							<p class="card-text ">VS</p>
						</div>
					</div>
					<div class="col">
						<img src="{{ asset(robotLose.img) }}" class="rounded float-end" alt="Image de l'attaque Lose" style="width:100%; height:100%">
						<div class="">
							<strong>{{ robotLose.name }}</strong>
						</div>
					</div>
				</div>
			</div>
			<br><br><br>
			<h3 class="message">{{ userWinOrNot }}</h3>
			<p class="win">
				<strong>{{ robotWin.name }}</strong>
				a gagné grâce à son attaque
				<strong>{{ robotWin.attack }}</strong>
				dommage pour
				<strong>{{ robotLose.name }}</strong>
				qui n'aurait pas du utiliser
				<strong>{{ robotLose.attack }}</strong>
			</p>
			<p class="win-citation">{{ robotWin.citation }}</p>
			<p class="finish">FINISH HIM !!!</p>
			<div class="fighters-button">
				<a href="{{ path('game') }}" class="fighters-return">← Retour dans l'arène</a>
			</div>
		</section>
		|</div>
{% endblock %}
